<resources>
    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ButtonCustom" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <!-- Outras propriedades do estilo aqui -->
    </style>



    <!-- ================================================================================================================================== -->
    <style name="EstiloImputLayoutPadrao" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/corFundoPadrao</item>
        <item name="hintTextAppearance">@style/MyHintTextAppearance</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>

    </style>

    <!-- Estilo para o TextInputEditText -->
    <style name="EstiloEditTextPadrao" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/corTextoPadrao</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- Estilo para o texto de dica (hint) -->
    <style name="MyHintTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/corTextoPadrao</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- ================================================================================================================================== -->


</resources>
