<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoPadrao">

    <ImageView
        android:id="@+id/imgLogoEletricaDimensionamento"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="Ícone dimensionamento"
        app:srcCompat="@drawable/logo_eletrica" />

    <TextView
        android:id="@+id/txtDimensionamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogoEletricaDimensionamento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:contentDescription="Texto dimensionamento"
        android:text="@string/txtTituloDimensionamento"
        android:textColor="@color/corTextoPadrao"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/txtCorrenteDimensionamento"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/txtDimensionamento"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:contentDescription="título corrente"
        android:gravity="center_horizontal"
        android:textColor="@color/corTextoPadrao"
        android:text=""
        android:textSize="25dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/correnteTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCorrenteDimensionamento"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:boxStrokeColor="@android:color/black"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editCorrenteDimensionamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Digite a corrente"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:gravity="center" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/correnteTextInputLayout"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCabo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/corTextoPadrao"
                android:text="@string/txtBitolaCabo"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txtCaboresultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/corTextoPadrao"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDsjuntor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="@string/txtDsjuntor"
                android:textColor="@color/corTextoPadrao"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txtDsjuntorResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/corTextoPadrao"
                android:textSize="25dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBotoes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLimparDimensionamento"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_limpar"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnCalcularDimensionamento"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_calcular"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnVoltarDimensionamento"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_voltar"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
