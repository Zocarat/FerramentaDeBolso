<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PolegadasMilimetrosActivity">



    <ImageView
        android:id="@+id/imgTabelaPolegadaMilimetro"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_width="400dp"
        android:layout_height="600dp"
        app:srcCompat="@drawable/tabela_polegada_milimetro" />

    <Button
        android:id="@+id/btnVoltarTabelaPolegadaMilimetro"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:text="@string/txtTabelaVoltarPlegadasMilimetros"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="615dp" />





    </androidx.appcompat.widget.LinearLayoutCompat>