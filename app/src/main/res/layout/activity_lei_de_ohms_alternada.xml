<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutGeral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoPadrao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"       >
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_close"
        android:scaleType="fitCenter"
        android:background="@color/corFundoPadrao"
        >
    </ImageButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layoutTetoEdson"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEdson"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:src="@drawable/img_icone_alternada"
                android:scaleType="fitCenter"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutResultaTesla"
            android:layout_width="440dp"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:background="@drawable/resultado_corrente_continua"


            >

            <TextView
                android:id="@+id/TextViewResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:text="0"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="50dp"

                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBotoesOhmsContinua"
            style="@style/StyleLayoutCorpoPrincipal"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="250dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/layoutCampoTensao"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imgCampoVazioTensao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:src="@drawable/img_tensao_alternada_off"
                            android:scaleType="fitCenter" />

                        <EditText
                            android:id="@+id/editTextTensao"
                            style="@style/EstiloEditTextPadrao"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:selectAllOnFocus="true"
                            android:text=""
                            android:textColor="@color/textColorEditOhmsAnternada"
                            android:textSize="28sp"
                            android:textStyle="bold" />



                    </FrameLayout>
                    <LinearLayout

                        android:layout_width="230dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            >

                            <ImageView
                                android:id="@+id/imgCampoPotencia"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:src="@drawable/img_potencia_alternada_off"
                                android:scaleType="fitCenter" ></ImageView>


                            <EditText
                                android:id="@+id/editTextPotencia"
                                style="@style/EstiloEditTextPadrao"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:inputType="numberDecimal"
                                android:selectAllOnFocus="true"
                                android:background="@null"
                                android:text=""
                                android:textColor="@color/textColorEditOhmsAnternada"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                            />
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"

                    >
                    <ImageButton
                        android:id="@+id/btnTrifasico"

                        android:layout_width="wrap_content"
                        android:layout_height="83dp"
                        android:background="@color/transparent"
                        android:layout_marginTop="18dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_trifasico_alternada_off" />
                    <ImageButton
                        android:id="@+id/btnWattsHp"

                        android:layout_width="wrap_content"
                        android:layout_height="83dp"
                        android:background="@color/transparent"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"

                        android:scaleType="centerCrop"
                        android:src="@drawable/img_watts_trifasico_start" />

                </LinearLayout>




            </LinearLayout>







            <LinearLayout
                android:layout_marginTop="100dp"
                android:id="@+id/layoutTesnaoCorrente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/StyleLayoutBottonHorizontal"
                android:background="@color/transparent"
                android:orientation="horizontal">



                <FrameLayout
                    android:id="@+id/layoutFatorPotencia"
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="15dp"
                    >

                    <ImageView
                        android:id="@+id/imgFatorPotencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@color/transparent"
                        android:src="@drawable/img_fator_potencia_trifasico_off"
                        android:scaleType="fitCenter" ></ImageView>

                    <EditText
                        android:id="@+id/editTextFatorPotencia"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="true"
                        android:background="@null"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/layoutCampoCorrente"
                    android:layout_width="180dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/imgRendimento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@color/transparent"
                        android:src="@drawable/img_rendimento_off"
                        android:scaleType="fitCenter" ></ImageView>

                    <EditText
                        android:id="@+id/editTextRendimento"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="true"
                        android:background="@null"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </FrameLayout>


            </LinearLayout>






        </LinearLayout>








        <LinearLayout
            android:id="@+id/layotInferiorAviso"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Controle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="30dp"
                />





            <ScrollView
                android:layout_width="360dp"
                android:layout_height="300dp">






                <LinearLayout
                    android:id="@+id/layoutGrafico"
                    android:layout_width="360dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">





                    <ImageButton
                        android:id="@+id/ButtonAvisoEdson"
                        android:layout_width="340dp"
                        android:layout_height="200dp"
                        android:src="@drawable/img_aviso_edson"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/transparent"

                        />












                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBotoes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/corFundoPadrao"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLimpar"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_limpar" />

        <ImageButton
            android:id="@+id/btnCalcular"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_calcular" />

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_voltar" />

    </LinearLayout>


</RelativeLayout>
