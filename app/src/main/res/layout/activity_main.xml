<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoPadrao"
    android:orientation="vertical"
    tools:context="view.MenuPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAD570"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDataSistemaXml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/txtData"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/corTextoPadrao"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHoraSistemaXml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/txtHora"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/corTextoPadrao"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:contentDescription="Icone do menu principal"
            app:srcCompat="@drawable/logo_menu_principal_fb" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnEletricaMenuXml"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/corFundoPadrao"
                        android:contentDescription="Botão de menu eletrica"
                        android:scaleType="fitCenter"
                        android:src="@drawable/button_img_eletrica" />

                    <ImageButton
                        android:id="@+id/btnComprimentoMenuXml"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/corFundoPadrao"
                        android:contentDescription="Descrição do ícone"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_button_comprimento"
                        android:text="@string/txtButtonComprimentos" />

                    <ImageButton
                        android:id="@+id/btnPressaoMenuXml"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/corFundoPadrao"
                        android:contentDescription="Botão menu pressão"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_button_pressao" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnTemperaturaMenu"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/corFundoPadrao"
                        android:contentDescription="Botão menu pressão"
                        android:layout_marginHorizontal="15dp"
                        android:scaleType="fitCenter"

                        android:src="@drawable/button_img_temperatura" />

                    <ImageButton
                        android:id="@+id/btnPorcentagemMenu"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/corFundoPadrao"
                        android:contentDescription="Botão menu pressão"
                        android:scaleType="fitCenter"
                        android:layout_marginHorizontal="15dp"
                        android:src="@drawable/img_button_porcentagem" />

                    <ImageButton
                        android:id="@+id/btnAreaMenu"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/corFundoPadrao"
                        android:contentDescription="Botão menu pressão"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_btn_area" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    style="@style/StyleLayoutBottonHorizontal"


                    >

                    <ImageButton
                        android:id="@+id/btnPesuMenu"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_button_peso"
                        android:scaleType="fitEnd"
                        android:background="@color/corFundoPadrao"
                        android:layout_marginHorizontal="15dp"
                        android:layout_gravity="center"
                      />


                </LinearLayout>




            </LinearLayout>




        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="#FBD670"

            >


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:onClick="abrirInsta"
                app:srcCompat="@drawable/logo_instagram" />



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_zocarato" />



            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="abrirFacebook"
                app:srcCompat="@drawable/logo_facebook" />
        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
