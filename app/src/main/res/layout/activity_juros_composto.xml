<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoPadrao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >










    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_close"
        android:scaleType="fitCenter"
        android:background="@color/corFundoPadrao"
        >



    </ImageButton>

    <ImageView
        android:id="@+id/imgLeiDeOhms"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"

        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/btn_close"
        app:srcCompat="@drawable/btn_juros_composto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/imgLeiDeOhms"

        android:orientation="vertical">

        <LinearLayout
            style="@style/StyleLayoutCorpoPrincipal"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <LinearLayout
                style="@style/StyleLayoutBottonHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EstiloImputLayoutPadrao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_marginHorizontal="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextInicial"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:digits="0123456789,."
                        android:hint="Inicial" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EstiloImputLayoutPadrao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMensal"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:digits="0123456789,."
                        android:hint="Mensal" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textImput2R"
                    style="@style/EstiloImputLayoutPadrao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTaxa"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:digits="0123456789,."
                        android:hint="Taxa %"
                        android:orientation="vertical" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EstiloImputLayoutPadrao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPeriodo"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789,."
                        android:hint="PerÃ­odo" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layoutGrafico"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"

                        >

                        <LinearLayout
                            android:id="@+id/layoutInfoJurosString"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="left"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/textViewValorAplicadoString"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Aplicado: "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewValorAcumuladoString"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valor Acumulado: "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewRendimentoTotalString"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rendimento Total: "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewRentabilidadeMensalString"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rentabilidade Mensal Media: "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/textViewRentabilidadeMensalFinalString"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rentabilidade Mensal Final: "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutNumberJuros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="right"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewValorAplicado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Aplicado: "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewValorAcumulado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valor Acumulado: "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewRendimentoTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rendimento Total: "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewRentabilidadeMensal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rentabilidade Mensal: "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                            android:id="@+id/textViewRentabilidadeMensalFinal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rentabilidade Final: "
                                android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        </LinearLayout>



                    </LinearLayout>





























                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/bar_chart"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1" />

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart"
                            android:layout_width="0dp"
                            android:layout_height="180dp"

                            android:layout_weight="1"
                            />

                    </LinearLayout>



























                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="100dp"

                        >



                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="16dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_weight="1"
                            android:background="@color/corFundoPadrao"
                            android:touchscreenBlocksFocus="true" />




                   </LinearLayout>


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBotoes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/corFundoPadrao"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLimpar"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_limpar" />

        <ImageButton
            android:id="@+id/btnCalcular"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_calcular" />

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_voltar" />

    </LinearLayout>


</RelativeLayout>
