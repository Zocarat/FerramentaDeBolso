<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutGeral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoPadrao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_close_icone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_close"
        android:scaleType="fitCenter"
        android:background="@color/corFundoPadrao"
        >



    </ImageButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layoutTetoTesla"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btnEdson"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_icone_continua"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutResultaEdson"
            android:layout_width="440dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/resultado_corrente_edson"
            android:orientation="horizontal"


            >

            <TextView
                android:id="@+id/TextViewResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="38dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="50dp"
                android:textStyle="bold"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutBotoesOhmsContinua"
            style="@style/StyleLayoutCorpoPrincipal"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="vertical">


            <LinearLayout
                style="@style/StyleLayoutBottonHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/btnTensaoSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_tensao_off" />

                <FrameLayout
                    android:id="@+id/layoutCampoTensao"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imgCampoVazioTensao"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"

                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ima_campo_vazio_ohms"></ImageView>


                    <EditText
                        android:id="@+id/editTextTensao"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    />
                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutTesnaoCorrente"
                style="@style/StyleLayoutBottonHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnCorrenteSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_corrente_off" />

                <FrameLayout
                    android:id="@+id/layoutCampoCorrente"
                    android:layout_width="180dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCampoVazioCorrente"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ima_campo_vazio_ohms"></ImageView>

                    <EditText
                        android:id="@+id/editTextCorrente"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/StyleLayoutBottonHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/btnResistenciaSelect"

                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_resistencia_off"

                    />

                <FrameLayout
                    android:id="@+id/layoutCampoResistencia"
                    android:layout_width="180dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCampoVazioResistencia"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ima_campo_vazio_ohms"></ImageView>


                    <EditText
                        android:id="@+id/editTextResistencia"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:inputType="numberDecimal"

                        android:selectAllOnFocus="true"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/StyleLayoutBottonHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/btnPotenciaSelect"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_potencia_off"

                    />

                <FrameLayout
                    android:id="@+id/layoutCampoPotencia"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"

                    android:background="@color/transparent">

                    <ImageView
                        android:id="@+id/imgCampoVazioPotencia"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ima_campo_vazio_ohms"></ImageView>


                    <EditText
                        android:id="@+id/editTextPOtencia"
                        style="@style/EstiloEditTextPadrao"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    />
                </FrameLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layotInferiorAviso"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Controle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="30dp" />


            <ScrollView
                android:layout_width="360dp"
                android:layout_height="300dp">


                <LinearLayout
                    android:id="@+id/layoutGrafico"
                    android:layout_width="360dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/ButtonAvisoEdson"
                        android:layout_width="340dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_aviso_edson"

                        />


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBotoes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/corFundoPadrao"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLimpar"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_limpar" />

        <ImageButton
            android:id="@+id/btnCalcular"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_calcular" />

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/corFundoPadrao"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_voltar" />

    </LinearLayout>


</RelativeLayout>
